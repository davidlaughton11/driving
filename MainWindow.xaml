<Window x:Class="_312576driving.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_312576driving"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <StackPanel>
        <TextBlock>Enter your age</TextBlock>
        <TextBox x:Name="ageInput"/>
        <Button x:Name="btnAge" Content="Press to see what you can do with you age" Click="btnAge_Click" />
        <Label x:Name="lblOutput"></Label>
        
    </StackPanel>
</Window>
